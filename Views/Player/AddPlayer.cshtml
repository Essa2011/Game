@model Players

    <div class="col-md-6 offset-md-3">
        <div class="card card-body bg-light">
            <form asp-controller="Player" asp-action="AddPlayer" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age">Age:</label>
                    <input asp-for="Age" class="form-control" min="1" max="100" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Height">Height:</label>
                    <input asp-for="Height" class="form-control" min="1" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Weight">Weight:</label>
                    <input asp-for="Weight" class="form-control" min="1" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Speed">Speed:</label>
                    <input asp-for="Speed" class="form-control" min="1" max="40" />
                    <span asp-validation-for="Speed" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="TeamsId">Team ID:</label>
                    <select asp-for="TeamsId" asp-items="@ViewBag.teamsList"></select>
                    <span asp-validation-for="TeamsId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit"  class="btn btn-primary"  > Add</button>
                    <div class="text-primary">@ViewBag.UserMessage</div>
                </div>

            </form>
        </div>
    </div>