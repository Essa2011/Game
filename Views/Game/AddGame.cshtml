@model Games


<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <form asp-controller="Game" asp-action="AddGame" method="post">

            <div class="form-group">
                <label asp-for="teamA">First team:</label>
                <select asp-for="teamA" asp-items="@ViewBag.teamA"></select>
                <span asp-validation-for="teamA" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="teamB">Second team:</label>
                <select asp-for="teamB" asp-items="@ViewBag.teamB"></select>
                <span asp-validation-for="teamB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="startTime">Start Time:</label>
                <input asp-for="startTime" class="form-control" />
                <span asp-validation-for="startTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="endTime">End Team:</label>
                <input asp-for="endTime" class="form-control" />
                <span asp-validation-for="endTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="score">Score:</label>
                <input asp-for="score" class="form-control" />
                <span asp-validation-for="score" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Add</button>
                <div class="text-primary">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>

